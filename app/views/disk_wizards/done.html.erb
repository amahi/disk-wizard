<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<% if user_selections['debug'] %>
		<% @operations.each do |operation| %>
		<%= operation %>
		<% end %>
		<% end %>
		<% if @user_selections["format"] %>
		<table class="table">
			<thead>
				<tr>
					<th>Disk name</th>
					<th>New filesystem type</th>
					<th>Mount point</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= @user_selections["kname"] %></td>
					<td><%= @user_selections["fs_type"] %></td>
					<td>/var/hda/disks/<%= @user_selections["kname"] %></td>
				</tr>
			</tbody>
		</table>
		<% end %>
		<a href="/" class="btn btn-success">
			Continue with another device
		</a>
	</div>
</div>
